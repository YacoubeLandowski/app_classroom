{% extends 'base.html.twig' %}

{% block title %}Inscrit index{% endblock %}

{% block styleAccueilEleve %}
<link href="{{asset('asset/assets/css/inscrit.css')}}" rel="stylesheet">
{% endblock %}


{% block body %}

<div id="ContainerDeux">
    <div id="AjoutProfs" >
        
        <h5 class="titreEtudiant">Inscrit</h5>
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_inscrit_new') }}">
            <button class="btn btn-primary">Inscire</button>
        </a>
        {% endif %}
    </div>
</div>
    
<div class="container">

    <table class="table table-hover mt-5">
        <thead>
            <tr class="table-dark"></tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for inscrit in inscrits %}
            <tr class="table-primary">
                <td>{{ inscrit.id }}</td>
                <td>
                    <a href="{{ path('app_inscrit_show', {'id': inscrit.id}) }}">show</a>
                    <a href="{{ path('app_inscrit_edit', {'id': inscrit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
</div>
    
{% endblock %}
